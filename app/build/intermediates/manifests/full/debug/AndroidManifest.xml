<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.blogspot.limarapeksege"
    android:installLocation="auto"
    android:versionCode="10"
    android:versionName="1.8.94" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Optional permission for App measurement to run. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="hu.blogspot.limarapeksege.util.AnalyticsTracker"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hu.blogspot.limarapeksege.activity.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.blogspot.limarapeksege.activity.MainPage"
            android:configChanges="orientation"
            android:label="@string/title_activity_main_page"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.blogspot.limarapeksege.activity.RecipeCategory"
            android:configChanges="orientation"
            android:exported="false"
            android:label="@string/title_activity_recipe_category"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.blogspot.limarapeksege.activity.RecipeList"
            android:configChanges="orientation"
            android:exported="false"
            android:label="@string/title_activity_recipe_list"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="hu.blogspot.limarapeksege.activity.RecipePage"
            android:configChanges="orientation"
            android:exported="false"
            android:label="@string/title_activity_recipe_page"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.blogspot.limarapeksege.activity.SavedRecipes"
            android:configChanges="orientation"
            android:label="@string/title_activity_saved_recipes"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.blogspot.limarapeksege.activity.LoafMakingActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:label="@string/title_activity_loaf_making_tutorial"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.blogspot.limarapeksege.activity.NotePad"
            android:configChanges="orientation"
            android:label="@string/title_activity_note_pad"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustPan" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.blogspot.limarapeksege.activity.RecipeSearch"
            android:configChanges="orientation"
            android:label="@string/title_activity_recipe_search"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <!-- <activity -->
        <!-- android:name="com.facebook.LoginActivity" -->
        <!-- android:configChanges="orientation" -->
        <!-- android:screenOrientation="portrait" /> -->

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="hu.blogspot.limarapeksege.activity.BaseActivity"
            android:label="@string/title_activity_base" />
        <activity
            android:name="hu.blogspot.limarapeksege.activity.AboutActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_main_page"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.google.android.gms.measurement.AppMeasurementContentProvider"
            android:authorities="hu.blogspot.limarapeksege.google_measurement_service"
            android:exported="false" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.measurement.UPLOAD" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>